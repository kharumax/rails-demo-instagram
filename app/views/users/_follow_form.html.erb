
<% if current_user %>
  <% unless current_user == @user %>
    <div id="follow_form">
      <% if current_user.following?(@user) %>
        <%= render 'unfollow'%>
      <% else %>
        <%= render 'follow' %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <%= link_to "Follow",new_user_session_path,class: "btn btn-primary" %>
<% end %>